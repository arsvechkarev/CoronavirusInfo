<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#1A1D36">

  <com.arsvechkarev.views.GradientHeaderView
    android:id="@+id/rankingsHeaderLayout"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:endColor="?colorGradientHeaderEnd"
    android:startColor="?colorGradientHeaderStart"
    app:layout_behavior="com.arsvechkarev.views.behaviors.HeaderBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
        android:id="@+id/rankingsIconDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/icon_drawer_margin"
        android:layout_marginTop="@dimen/icon_drawer_margin"
        android:src="@drawable/ic_drawer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

      <TextView
        android:id="@+id/rankingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_bold"
        android:gravity="center"
        android:text="Rankings"
        android:textColor="?colorTextPrimary"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </com.arsvechkarev.views.GradientHeaderView>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rankingsRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.arsvechkarev.views.behaviors.ScrollingRecyclerBehavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>