<?xml version="1.0" encoding="utf-8"?>
<com.arsvechkarev.views.BottomSheet xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/bottomSheet"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:defaultState="hidden">

  <FrameLayout
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackground">

    <FrameLayout
      android:id="@+id/fragment_map_root"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="invisible"/>

    <FrameLayout
      android:id="@+id/layoutFailure"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="invisible">

      <LinearLayout
        android:id="@+id/layoutNoConnection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <com.arsvechkarev.views.FontTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="24dp"
          android:gravity="center"
          android:text="No connection"
          android:textSize="@dimen/text_h3"/>

        <com.arsvechkarev.views.noconnection.EarthView
          android:id="@+id/earthView"
          android:layout_width="match_parent"
          android:layout_height="150dp"/>

        <com.arsvechkarev.views.ClickableTextView
          android:id="@+id/textRetry"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:text="RETRY"
          android:textColor="?colorFailure"
          android:textSize="@dimen/text_h4"
          app:rippleColor="?colorFailureRipple"/>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/layoutUnknownError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.arsvechkarev.views.FontTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableStart="@drawable/ic_error"
          android:drawablePadding="12dp"
          android:gravity="center"
          android:text="Unknown error"
          android:textSize="@dimen/text_h2"/>

        <com.arsvechkarev.views.ClickableTextView
          android:id="@+id/textRetryUnknown"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:text="RETRY"
          android:textColor="?colorFailure"
          android:textSize="@dimen/text_h4"
          app:rippleColor="?colorFailureRipple"/>

      </LinearLayout>

    </FrameLayout>

    <LinearLayout
      android:id="@+id/layoutLoadingMap"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:visibility="invisible">

      <com.arsvechkarev.views.ProgressBar
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_margin="@dimen/loading_layout_margin"
        app:color="?colorAccent"/>

      <com.arsvechkarev.views.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/loading_layout_margin"
        android:text="@string/text_loading_map"
        android:textColor="?colorTextPrimary"
        android:textSize="@dimen/text_h1"/>

    </LinearLayout>

  </FrameLayout>

  <LinearLayout
    android:id="@+id/layoutCountryInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_simple_bottom_sheet"
    android:orientation="vertical">

    <com.arsvechkarev.views.FontTextView
      android:id="@+id/textViewCountryName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/text_country_name_margin"
      android:gravity="center"
      android:textColor="?colorTextPrimary"
      android:textSize="@dimen/text_h1"/>

    <com.arsvechkarev.views.BigStatsView
      android:id="@+id/statsView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/big_stats_view_padding"
      android:textSize="@dimen/text_h3"
      app:innerLinePadding="@dimen/big_stats_view_line_padding"
      app:innerSidePadding="@dimen/big_stats_view_side_padding"/>

  </LinearLayout>

</com.arsvechkarev.views.BottomSheet>