<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="TextNumber">
    <item name="android:layout_marginTop">@dimen/stats_text_number_m_top</item>
    <item name="android:textSize">@dimen/text_h0</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextHeader">
    <item name="android:layout_marginTop">@dimen/stats_text_header_m_top</item>
    <item name="android:textColor">?colorTextSecondary</item>
    <item name="android:textSize">@dimen/text_h2</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Chip">
    <item name="colorSecondary">?attr/colorBackground</item>
    <item name="chipCornerRadius">@dimen/stats_chip_corner_radius</item>
    <item name="android:layout_margin">@dimen/stats_chip_margin</item>
    <item name="android:paddingHorizontal">@dimen/stats_chip_padding_horizontal</item>
    <item name="android:paddingVertical">@dimen/stats_chip_padding_vertical</item>
  </style>
</resources>