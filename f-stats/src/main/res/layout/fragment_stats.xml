<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#423C61"
  android:clickable="false">

  <!-- Todo: replace with custom layout? -->
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:layout_behavior="com.arsvechkarev.stats.behaviors.TitleHeaderBehavior">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/ic_drawer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/imageDoctor"
      android:layout_width="180dp"
      android:layout_height="140dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/image_doctor"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="176dp"
      android:gravity="center"
      android:text="Stay home\nStay safe"
      android:textSize="28sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.core.widget.NestedScrollView
    android:id="@+id/scrollingContentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp"
    app:layout_behavior="com.arsvechkarev.stats.behaviors.StatsContentBehavior">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_stats_content"
      android:orientation="vertical">

      <com.arsvechkarev.views.ThreeElementsInARowViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="24dp">

        <com.arsvechkarev.views.CoronavirusMainStatsView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_overlay"/>

        <com.arsvechkarev.views.CoronavirusMainStatsView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_overlay"/>

        <com.arsvechkarev.views.CoronavirusMainStatsView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_overlay"/>

      </com.arsvechkarev.views.ThreeElementsInARowViewGroup>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Total cases"
        android:textSize="24sp"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="24dp"
        android:background="@drawable/bg_overlay"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="New cases"
        android:textSize="24sp"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="24dp"
        android:background="@drawable/bg_overlay"/>

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>