<?xml version="1.0" encoding="utf-8"?>
<com.arsvechkarev.views.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/drawerLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <com.arsvechkarev.views.DrawerGroupLinearLayout
    android:id="@+id/drawerGroupLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drawer"
    android:orientation="vertical">

    <TextView
      android:id="@+id/drawerTextTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:drawableStart="@drawable/logo_icon"
      android:drawablePadding="16dp"
      android:fontFamily="@font/segoe_ui_bold"
      android:gravity="center"
      android:text="@string/title_covid_19"
      android:textColor="?colorTextPrimary"
      android:textSize="30sp"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/drawerTextStatistics"
      style="@style/DrawerMenuItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:drawableStart="@drawable/ic_statistics"
      android:text="@string/label_stats"/>

    <TextView
      android:id="@+id/drawerTextNews"
      style="@style/DrawerMenuItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_newspaper"
      android:text="@string/label_news"/>

    <TextView
      android:id="@+id/drawerTextMap"
      style="@style/DrawerMenuItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_map"
      android:text="@string/label_map"/>

    <TextView
      android:id="@+id/drawerTextTips"
      style="@style/DrawerMenuItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_tips"
      android:text="@string/label_tips"/>

    <TextView
      android:id="@+id/drawerTextRankings"
      style="@style/DrawerMenuItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_rankings"
      android:text="@string/label_rankings"/>

  </com.arsvechkarev.views.DrawerGroupLinearLayout>

</com.arsvechkarev.views.DrawerLayout>