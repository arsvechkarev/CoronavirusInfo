<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipChildren="false">

  <View
    android:id="@+id/newsLoadingStub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.arsvechkarev.views.behaviors.ViewUnderHeaderBehavior"/>

  <com.arsvechkarev.views.CustomRecyclerView
    android:id="@+id/newsRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    app:layout_behavior="com.arsvechkarev.views.behaviors.ScrollingRecyclerBehavior"/>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/newsHeaderView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clipChildren="false"
    app:layout_behavior="com.arsvechkarev.views.behaviors.HeaderBehavior">

    <View
      android:id="@+id/newsGradientHeaderView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/title_tips"
      android:textSize="@dimen/text_header"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/newsImageDrawer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/icon_drawer_margin"
      android:layout_marginTop="@dimen/icon_drawer_margin"
      android:src="@drawable/ic_drawer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>