<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents">
    <item name="android:textViewStyle">@style/TextStyle</item>
  </style>

  <style name="AppTheme.Dark">
    <item name="colorBackground">@color/dark_background</item>
    <item name="colorBackgroundLight">@color/dark_background_light</item>
    <item name="colorOverlay">@color/dark_overlay</item>
    <item name="colorOverlayShine">@color/dark_overlay_shine</item>
    <item name="colorOverlayShineLight">@color/dark_overlay_shine_light</item>
    <item name="colorOverlayAccent">@color/dark_overlay_accent</item>
    <item name="colorDialog">@color/dark_dialog</item>
    <item name="colorGradientHeaderStart">@color/dark_gradient_header_start</item>
    <item name="colorGradientHeaderEnd">@color/dark_gradient_header_end</item>
    <item name="colorRipple">@color/dark_ripple</item>
    <item name="colorIconDefault">@color/dark_icon_default</item>
    <item name="colorTextPrimary">@color/dark_text_primary</item>
    <item name="colorTextSecondary">@color/dark_text_secondary</item>

    <item name="colorFailure">@color/dark_failure</item>
    <item name="colorFailureRipple">@color/dark_failure_ripple</item>

    <item name="colorConfirmed">@color/dark_confirmed</item>
    <item name="colorRecovered">@color/dark_recovered</item>
    <item name="colorDeaths">@color/dark_deaths</item>
    <item name="colorPercentByCountry">@color/dark_percent_by_country</item>
    <item name="colorDeathRate">@color/dark_death_rate</item>

    <item name="colorBottomNavigationDivider">@color/dark_bottom_navigation_divider</item>
    <item name="colorDivider">@color/dark_divider</item>

    <item name="colorTextAccent">@color/dark_text_accent</item>
    <item name="colorTextLinks">@color/dark_links</item>
  </style>

  <style name="TextStyle" parent="@style/TextAppearance.AppCompat">
    <item name="fontFamily">@font/segoe_ui_bold</item>
    <item name="android:textColor">?colorTextPrimary</item>
  </style>

</resources>